<Configuration status="WARN" strict="true" name="XMLConfigTest" packages="org.apache.logging.log4j.test">

    <Properties>
        <Property name="filename">log.txt</Property>
    </Properties>

    <Appenders>
        <Appender type="Console" name="STDOUT">
            <Layout type="PatternLayout" pattern="%-1p %c{1}:%L - %m%n"/>
        </Appender>

        <Appender type="File" name="File" fileName="${filename}">
            <Layout type="PatternLayout">
                <Pattern>%d %p %C{1.} [%t] %m%n</Pattern>
            </Layout>
        </Appender>

        <!-- this is a project specifc appender that logs to a ListBox in the GUI
        The filtering is applied in the appender itself
        -->
        <Appender type="ListBoxAppender" name="ListBoxAppender" >
            <Layout type="PatternLayout">
                <Pattern>%c{1.} :  %m%n</Pattern>
            </Layout>
        </Appender>

    </Appenders>

    <Loggers>

        <Logger name="de.cadoculus.ocxviewer.models.FlagsEnum" level="debug"/>

        <Logger name="de.cadoculus.ocxviewer.views.HeaderPage" level="info"/>
        <Logger name="de.cadoculus.ocxviewer.logging.LoggerHelper" level="info"/>
        <Logger name="de.cadoculus.ocxviewer.MainController" level="debug"/>
        <Logger name="de.cadoculus.ocxviewer.actions.ActionDispatcher" level="debug"/>
        <Logger name="de.cadoculus.ocxviewer.io.OCXIO" level="debug"/>
        <Logger name="de.cadoculus.ocxviewer.io.NamespaceReplacingInputStream" level="debug"/>

        <Root level="INFO">
            <AppenderRef ref="STDOUT"/>
            <AppenderRef ref="File"/>
            <!-- do not remove the following appender, otherwise the listbox in the UI becomes empty -->
            <AppenderRef ref="ListBoxAppender"/>
        </Root>
    </Loggers>



</Configuration>