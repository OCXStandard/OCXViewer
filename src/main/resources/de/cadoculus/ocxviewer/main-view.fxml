<?xml version="1.0" encoding="UTF-8"?>


<?import de.cadoculus.ocxviewer.views.LogoPage?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<BorderPane fx:id="mainBorderPane"
            maxHeight="2000" maxWidth="2000"
            minHeight="600" minWidth="800"
            prefHeight="1024.0" prefWidth="1400"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="de.cadoculus.ocxviewer.MainController">


    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem accelerator="ctrl-o" mnemonicParsing="false" onAction="#open" text="Open"/>
                        <SeparatorMenuItem mnemonicParsing="false"/>
                        <MenuItem accelerator="ctrl-q" mnemonicParsing="false" onAction="#exit" text="Exit"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Actions">
                    <items>
                        <!-- <MenuItem mnemonicParsing="false" text="Schema Check"  /> -->
                        <MenuItem mnemonicParsing="false" onAction="#switchUIMode" text="UI Mode"/>
                        <MenuItem mnemonicParsing="false" onAction="#open3DView" text="3D View"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#help" text="Help">
                            <graphic>
                                <FontIcon iconLiteral="mdi2h-help" iconSize="15"/>
                            </graphic>
                        </MenuItem>
                        <MenuItem mnemonicParsing="false" onAction="#about" text="About">
                            <graphic>
                                <FontIcon iconLiteral="mdi2i-information-outline" iconSize="15"/>
                            </graphic>
                        </MenuItem>

                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>

    <center>
        <LogoPage fx:id="logoPage"/>
    </center>


</BorderPane>
